@model Cansat.Setebos.Data.Flights

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Flights</legend>
    @Html.HiddenFor( m => m.FlightId)
    <div class="display-label">
        @Html.DisplayNameFor(model => model.FlightId): @Html.DisplayFor(model => model.FlightId)
    </div>


    <div class="display-label">
        @Html.DisplayNameFor(model => model.Active): @Html.DisplayFor(model => model.Active)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
    </div>

</fieldset>
<p>

    @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
    <button id="btnstart" class="btn btn-default">Start / stop</button>

</p>

<div class="row">
    <div class="col-lg-4">
        <div class="row">
            <div class="col-xs-12">Voltaje (v)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">               
                <div class="progress">
                    <div id="barVoltage" data-max="7" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                5 v
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Altitud (m)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">               
                <div class="progress">
                    <div id="barAltitude" data-max="5000" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
               5000 m
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Temperatura interna (&deg;C)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">
                <div class="progress">
                    <div id="barInternalTemperature" data-max="50" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                50 &deg;C
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Temperatura (&deg;C)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">
                <div class="progress">
                    <div id="barTemperature" data-max="50" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                50 &deg;C
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Presión (Pa)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">
                <div class="progress">
                    <div id="barPresure" data-max="10" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                10 Pa
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Humedad (%)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">
                <div class="progress">
                    <div id="barHumidity" class="progress-bar" data-max="100" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                100%
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">Monoxido de carbono (CO)</div>
        </div>
        <div class="row">
            <div class="col-xs-9">
                <div class="progress">
                    <div id="barCO" data-max="100" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                        60%
                    </div>
                </div>
            </div>
            <div class="col-xs-3">
                100%
            </div>
        </div>
       
    </div>
    <div class="col-lg-8">        
        <div id='mapContainer' style="position:relative; width:100%; height:500px; margin:10px" ></div>
    </div>
</div>

